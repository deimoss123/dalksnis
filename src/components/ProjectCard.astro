---
import type { MDXInstance } from 'astro';
import type { ProjectData } from '../types/ProjectData';

interface Props {
  data: MDXInstance<ProjectData>;
}

const {
  data: {
    frontmatter: { title, description, date },
    url,
  },
} = Astro.props;
---

<a
  href={url}
  class="cursor-pointer rounded-md border border-slate-400 p-3 transition-[border-color] duration-200 hover:border-sky-400"
>
  <h3 class="inline text-xl">{title}</h3>
  <span class="text-md ml-2 inline text-slate-500">{date}</span>
  <p class="text-slate-400">{description}</p>
</a>
